<div id="api-test" v-cloak>

  <h1>API-Hole</h1>
  <div class="form-group">
    <span>Method : </span>
    <select v-model="method" @change="OptionChange()">
      <option disabled value="">Please select one</option>
      <option>GET</option>
      <option>POST</option>
    </select>
  </div>
  <div class="form-group">
    <span>{{body_title}} : </span>
    <textarea v-model.trim="body" class="show-form" laceholder="Input body_title." autocomplete="none">{{body}}</textarea>
  </div>
  <div class="form-group">
    <button @click="SubmitHole()">SUBMIT</button>
  </div>
  <hr>
  <div class="form-group">
    <textarea class="show-form" readonly="true" laceholder="Show you the result of calling the api by selected method." autocomplete="none">{{hole}}</textarea>
  </div>
</div>
<%- /* Expose server-rendered data as window.SAILS_LOCALS :: */ exposeLocalsToBrowser() %>
